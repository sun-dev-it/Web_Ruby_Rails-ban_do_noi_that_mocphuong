<%= render "project_informations/image" %>

<div class="flex justify-center">
  <div class="w-[90%] sm:w-[80%] z-47">

    <!-- Phần mô tả -->
    <div style="<%= bg_rgba(Color.first&.background1, 0.8) %>;"
         class="py-4 md:py-8 px-6 md:px-12 min-h-[200px] shadow-lg mt-[-100px] md:mt-[-120px] backdrop-blur-md">
      <div class="text-base md:text-lg leading-relaxed italic text-center md:text-justify">
        <%= simple_format(@introduction&.content || "Chúng tôi đang cập nhật thông tin giới thiệu...") %>
      </div>
    </div>

    <hr class="border-0 h-[2px] rounded-full" style="background-color: <%= Color.first&.header || '#ffffff' %>;">
    <div class="text-center mt-10 mb-8">
      <h2 class="text-3xl md:text-4xl font-extrabold tracking-wide"
          style="color: <%= Color.first&.header || '#ffffff' %>;">
        <span class="inline-block relative">

          THÔNG TIN DỰ ÁN

          <!-- Gạch highlight dưới -->
          <span class="absolute left-1/2 -bottom-2 w-16 h-[3px] -translate-x-1/2 rounded-full"
                style="background-color: <%= Color.first&.header || '#ffffff' %>;">
          </span>

        </span>
      </h2>
    </div>


    <!-- Danh sách project -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mt-10">

      <% @project_informations.each do |project_information| %>
        <%= link_to project_information_path(project_information.id) do %>

          <div class="group my-2">
            <div class="relative overflow-hidden shadow-lg">

              <% if project_information.image.attached? %>
                <%= image_tag project_information.image,
                    class: "w-full aspect-[4/3] object-cover transform transition duration-500 group-hover:scale-110" %>
              <% end %>

              <!-- Overlay đẹp với gradient tối -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent
                          opacity-0 group-hover:opacity-100 transition duration-500
                          flex items-end p-5">
                <p class="text-white text-lg font-medium translate-y-5
                          group-hover:translate-y-0 transition duration-500">
                  <%= truncate(project_information.content, length: 120) %>
                </p>
              </div>

            </div>

            <!-- Tên project -->
            <div class="font-semibold text-xl text-center mt-4 text-gray-900">
              <%= project_information.name %>
            </div>
          </div>

        <% end %>
      <% end %>

    </div>

  </div>
</div>

<%= render "items/name_web" %>
