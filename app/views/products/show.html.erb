<div class="py-3 px-5">
    <h1 class="text-1xl md:text-3xl font-semi font-bold text-gray-700 my-1">
      <%= @product.category.name %>
    </h1>
    <div class="flex text-xs">
        <%= link_to root_path do %>
            <div class="flex hover:text-black">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3 mt-[2px]">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                </svg>
                <div>Trang chủ</div>
            </div>
        <% end %>
 
        > Sản phẩm > <%= @product.category.name %> > > <%= @product.name %>
    </div>
</div>



<div class="hover:shadow-md transition-all duration-300 overflow-hidden">
  <div class="relative overflow-hidden">
    <% if @product.images.attached? %>
      <%= image_tag @product.images.first,
          class: "w-full aspect-[4/3] object-cover
                  transform group-hover:scale-110 transition duration-700" %>
    <% end %>
  <div class="p-5">
    <h3 class="text-xl font-semi text-gray-700 group-hover:text-black transition">
      <%= @product.name %>
    </h3>
    <%= @product.size %>
    <%= truncate(@product.description, length: 120) %>
    <p class="text-sm font-sans font-bold text-red-500 mt-2 text-right">
      <%= number_to_currency(@product.price, unit: "VND ", format: "%n %u", precision: 0) %>
    </p>
    <!-- Nút thêm vào giỏ -->
    <div class="mt-4 text-right">
      <%= button_to "Thêm vào giỏ",
            add_cart_path(product_id: @product.id),
            method: :post,
            form: { data: { remote: true } },
            class: "bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-800 transition" %>
    </div>
  </div>
</div>

