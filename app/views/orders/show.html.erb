<div class="flex justify-center">
    <div class="w-[90%] sm:w-[60%] mt-6 sm:mt-14 boder bg-white rounded-lg p-2 sm:p-10">
      <p class="text-center font-bold text-2xl sm:text-4xl mb-4">Chi tiết đơn hàng</p>
      
      <div class="my-4">
        <p><strong>Trạng thái: </strong> <%= @order.status.capitalize %></p>
        <p><strong>Ngày đặt: </strong> <%= @order.created_at.strftime("%d/%m/%Y %H:%M") %></p>
      </div>

      <table class="w-full border border-gray-300 rounded-lg overflow-hidden text-center">
        <thead class="bg-gray-100 border-b border-gray-300">
          <tr>
            <th class="px-4 py-2 border-r border-gray-300">Sản phẩm</th>
            <th class="px-4 py-2 border-r border-gray-300">Số lượng</th>
            <th class="px-4 py-2 border-r border-gray-300">Giá</th>
            <th class="px-4 py-2 border-r border-gray-300">Thành tiền</th>
          </tr>
        </thead>
        <tbody>
          <% total = 0 %>
          <% @order.order_items.each do |item| %>
            <% total += item.price * item.quantity %>
            <tr class="border-b border-gray-200 hover:bg-gray-50">
          
          
              <td class="px-4 py-2 border-r border-gray-200 align-middle">
                <%= item.product.name %>
              </td>
              <td class="px-4 py-2 border-r border-gray-200 align-middle">
                <%= item.quantity %>
              </td>
              <td class="px-4 py-2 border-r border-gray-200 align-middle">
                <%= number_to_currency(item.price, unit: "VND ", format: "%n %u", precision: 0) %>
              </td>
          
              <td class="px-4 py-2 border-r border-gray-200 align-middle">
                <%= number_to_currency(item.price * item.quantity, unit: "VND ", format: "%n %u", precision: 0) %>
              </td>
          
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <div class="flex justify-end">
        <%= link_to "Quay lại", user_path(current_user) %>
      </div>

    </div>
</div>


<%= render "items/name_web" %>
