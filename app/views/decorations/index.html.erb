<ul class="mt-4 space-y-2">
  <% @decorations.each do |decoration| %>
    <li>
      <%= decoration.name %>
      <%= decoration.content %>
      <% if decoration.image.attached? %>
        <%= image_tag decoration.image, class: "w-48 h-48 object-cover" %>
      <% else %>
        Chưa có ảnh
      <% end %>

    </li>
  <% end %>
</ul>