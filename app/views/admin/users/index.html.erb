<%= link_to "← Quay lại", admin_dashboard_path,
      class:"text-blue-600 hover:text-blue-800 m-6 inline-block" %>
        
<div class="flex justify-center">
  <div class="sm:w-[80%] w-[90%] mt-10 bg-white rounded-lg p-6 sm:p-10">
    <!-- Form tạo/chỉnh sửa admin -->
    <%= render "form", user: @user %>

    <!-- Tiêu đề danh sách admin -->
    <h2 class="text-2xl font-bold mt-10 mb-4">Danh sách Admin</h2>

    <!-- Bảng admin -->
    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-200 divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Họ và tên</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Email</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Vai trò</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Hành động</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr>
              <td class="px-4 py-2"><%= user.name %></td>
              <td class="px-4 py-2"><%= user.email %></td>
              <td class="px-4 py-2"><%= user.role %></td>
              <td class="px-4 py-2 space-x-2">
                <%= link_to 'Chỉnh sửa', edit_admin_user_path(user),
                      class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition" %>
                <% unless @Manager %>
                  <%= button_to 'Xóa', admin_user_path(user),
                        method: :delete,
                        class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
