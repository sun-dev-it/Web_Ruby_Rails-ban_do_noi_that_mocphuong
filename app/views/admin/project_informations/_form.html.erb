<%= form_with model: [:admin, @project_information], local: true, multipart: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-xl shadow-lg">

    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Thông tin dự án</h2>

    <div>
      <%= f.label :name, "Tên dự án", class: "block font-medium mb-1" %>
      <%= f.text_field :name,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <div>
      <%= f.label :content, "Mô tả", class: "block font-medium mb-1" %>
      <%= f.text_area :content, rows: 4,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <div>
      <%= f.label :images, "Thêm ảnh dự án", class: "block font-medium mb-1" %>
      <%= f.file_field :images, multiple: true, class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Lưu dự án",
            class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>

<% @project_information.images.each do |image| %>
  <div class="relative inline-block mr-2">
    <%= image_tag image, class: "w-32 h-32 object-cover rounded border" %>
    <%= button_to "Xóa",
          purge_image_admin_project_information_path(@project_information, image_id: image.id),
          method: :delete,
          data: { confirm: "Bạn có chắc muốn xóa ảnh này?" },
          class: "absolute top-0 right-0 bg-red-500 text-white px-1 rounded" %>
  </div>
<% end %>


