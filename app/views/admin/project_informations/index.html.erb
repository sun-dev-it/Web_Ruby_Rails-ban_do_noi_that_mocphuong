<%= link_to "← Quay lại", admin_dashboard_path,
      class:"text-blue-600 hover:text-blue-800 m-6 inline-block" %>

<div class="flex justify-center">
  <div class="sm:w-[80%] w-[90%] mt-10 bg-white rounded-lg p-6 sm:p-10">
    <h1 class="text-2xl font-bold mb-6 text-center">Quản lí dự án</h1>

    <!-- Form tạo/chỉnh sửa dự án -->
    <%= render "form", project_information: @project_information %>

    <!-- Danh sách dự án vừa thêm/chỉnh sửa -->
    <ul class="mt-6 space-y-4">
      <p class="font-bold">Dự án vừa thêm/chỉnh sửa</p>
      <% @project_informations.each do |project_information| %>
        <li class="border rounded-lg p-4 space-y-2">
          <div class="flex justify-between items-start">
            <div>
              <p class="font-semibold"><%= project_information.name %></p>
              <p class="text-gray-700"><%= project_information.content %></p>
            </div>

            <!-- Ảnh dự án -->
            <% if project_information.image.attached? %>
              <%= image_tag project_information.image, class: "w-32 h-32 object-cover rounded border" %>
            <% else %>
              <p class="text-gray-400">Không có hình ảnh</p>
            <% end %>
          </div>

          <!-- Nút Sửa/Xóa -->
          <div class="flex space-x-4 justify-end">
            <%= link_to "Sửa", edit_admin_project_information_path(project_information),
                  class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition" %>
            <%= button_to "Xóa", admin_project_information_path(project_information),
                  method: :delete,
                  class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
