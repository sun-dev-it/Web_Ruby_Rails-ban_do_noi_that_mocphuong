<%= link_to "← Quay lại", admin_dashboard_path,
      class:"text-blue-600 hover:text-blue-800 m-6 inline-block" %>
        
<div class="flex justify-center">
  <div class="sm:w-[80%] w-[90%] mt-10 bg-white rounded-lg p-6 sm:p-10">
    <h1 class="text-2xl font-bold mb-6 text-center">Quản lí danh mục</h1>

      <%= render "form" %>

      <ul class="mt-4 space-y-2">
        <p class="font-bold"> Danh mục vừa thêm/chỉnh sửa </p>
        <% @categories.each do |cat| %>
          <li>
            <%= cat.name %>
            <div class="flex w-full justify-end">
              <%= link_to "Sửa", edit_admin_category_path(cat) %> |
              <%= link_to "Xóa", admin_category_path(cat),
                    data: { turbo_method: :delete } %>
            </div>
          </li>
        <% end %>
      </ul>
  </div>
</div>