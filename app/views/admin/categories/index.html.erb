<h1>Tạo danh mục</h1>

<%= render "form" %>

<h1>Danh sách danh mục</h1>
<ul>
  <% @categories.each do |cat| %>
    <li>
      <%= cat.name %> —
      <%= link_to "Sửa", edit_admin_category_path(cat) %> |
      <%= button_to "Xóa", admin_category_path(cat), method: :delete %>
    </li>
  <% end %>
</ul>
