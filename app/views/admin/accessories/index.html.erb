<%= link_to "← Quay lại", admin_dashboard_path,
      class:"text-blue-600 hover:text-blue-800 mt-6 inline-block" %>

<div class="flex justify-center">
  <div class="sm:w-[80%] w-[90%] mt-10 bg-white rounded-lg p-6 sm:p-10">
    <h1 class="text-2xl font-bold mb-6 text-center">Quản lí phụ kiện</h1>

    <!-- Form tạo/chỉnh sửa phụ kiện -->
    <%= render "form", accessory: @accessory %>

    <!-- Danh sách phụ kiện vừa thêm/chỉnh sửa -->
    <ul class="mt-6 space-y-4">
      <p class="font-bold">Phụ kiện vừa thêm/chỉnh sửa</p>
      <% @accessories.each do |accessory| %>
        <li class="border rounded-lg p-4 space-y-2">
          <div class="flex justify-between items-start">
            <div>
              <p class="font-semibold"><%= accessory.name %></p>
              <% if accessory.content.present? %>
                <p class="text-gray-700"><%= accessory.content %></p>
              <% else %>
                <p class="text-gray-400">Không có mô tả</p>
              <% end %>
            </div>

          </div>

          <!-- Nút Sửa/Xóa -->
          <div class="flex space-x-4 justify-end">
            <%= link_to "Sửa", edit_admin_accessory_path(accessory),
                  class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition" %>
            <%= button_to "Xóa", admin_accessory_path(accessory),
                  method: :delete,
                  class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
