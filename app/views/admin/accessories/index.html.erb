<%= render "form", accessories: @accessories %>

<ul class="mt-4 space-y-2">
  <% @accessories.each do |accessory| %>
    <li>
      <%= accessory.name %>
      <% if accessory.content %>
        <%= accessory.content %>
      <% else %>
        <p>Không có mô tả</p>
      <% end %>
      <% if accessory.image.attached? %>
        <%= image_tag accessory.image, class: "w-48 h-48 object-cover" %>
      <% else %>
        <p>Không có hình ảnh</p>
      <% end %>
      
      <%= link_to "Sửa", edit_admin_accessory_path(accessory) %> |
      <%= button_to "Xóa",
      admin_accessory_path(accessory),
      method: :delete %>

    </li>
  <% end %>
</ul>

