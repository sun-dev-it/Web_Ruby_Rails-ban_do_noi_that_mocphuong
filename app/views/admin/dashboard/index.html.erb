<canvas id="meteor-canvas"></canvas>


<script>
(() => {
  const canvas = document.getElementById("meteor-canvas");
  const ctx = canvas.getContext("2d");

  function resize() {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  }
  resize();
  window.addEventListener("resize", resize);

  const stars = [];
  const STAR_COUNT = 120;

  function initStars() {
    stars.length = 0;
    for (let i = 0; i < STAR_COUNT; i++) {
      stars.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        r: Math.random() * 1.5 + 0.5,
        o: Math.random(),
        speed: Math.random() * 0.02 + 0.005
      });
    }
  }

  initStars();

  function drawStars() {
    stars.forEach(s => {
      s.o += s.speed;
      if (s.o > 1 || s.o < 0) s.speed *= -1;

      ctx.beginPath();
      ctx.fillStyle = `rgba(255,255,255,${s.o})`;
      ctx.arc(s.x, s.y, s.r, 0, Math.PI * 2);
      ctx.fill();
    });
  }

  class Meteor {
  constructor() {
    this.reset();
  }

  reset() {
    this.x = Math.random() * canvas.width;
    this.y = Math.random() * -canvas.height;
    this.len = Math.random() * 130 + 20;
    this.speed = Math.random() * 4 + 2;
    this.life = 0;
    this.maxLife = Math.random() * 80 + 80;
  }

  draw() {
    const alpha = Math.min(this.life / 20, (this.maxLife - this.life) / 20);

    ctx.beginPath();
    ctx.strokeStyle = `rgba(255,255,255,${alpha})`;
    ctx.lineWidth = 1.5;
    ctx.moveTo(this.x, this.y);
    ctx.lineTo(this.x - this.len, this.y + this.len);
    ctx.stroke();
  }

  update() {
    this.x -= this.speed;
    this.y += this.speed;
    this.life++;

    if (
      this.life > this.maxLife ||
      this.y > canvas.height ||
      this.x < -this.len
    ) {
      this.reset();
    }
  }
}


  const meteors = Array.from({ length: 10 }, () => new Meteor());

  function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    drawStars();

    meteors.forEach(m => {
      m.update();
      m.draw();
    });

    requestAnimationFrame(animate);
  }

  animate();
})();
</script>
