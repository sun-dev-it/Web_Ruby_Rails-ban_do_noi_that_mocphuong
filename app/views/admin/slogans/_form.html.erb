<%= form_with model: @slogan, url: admin_slogan_path, local: true, method: :patch, multipart: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-xl shadow-lg max-w-2xl mx-auto">

    <!-- Nội dung Slogan -->
    <div>
      <%= f.label :content, "Nội dung Slogan", class: "block font-medium mb-1" %>
      <%= f.text_area :content, rows: 3,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Logo -->
    <div>
      <%= f.label :image, "Logo", class: "block font-medium mb-1" %>
      <%= f.file_field :image,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white" %>
    </div>

    <!-- Nút Cập nhật -->
    <div class="pt-4">
      <%= f.submit "Cập nhật",
            class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>

<!-- Hiển thị Logo nếu đã upload -->
<% if @slogan.image.attached? %>
  <div class="mt-6 flex justify-center">
    <%= image_tag @slogan.image, class: "w-48 h-48 object-cover rounded border" %>
  </div>
<% end %>
