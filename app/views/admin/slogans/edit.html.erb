<h1>Chỉnh sửa Slogan</h1>

<%= form_with model: @slogan, url: admin_slogan_path, local: true, method: :patch do |f| %>
  <div>
    <%= f.label :content, "Nội dung Slogan" %><br>
    <%= f.text_area :content, rows: 3 %>

    <%= f.label :image, "Logo" %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit "Cập nhật" %>
  </div>
<% end %>
