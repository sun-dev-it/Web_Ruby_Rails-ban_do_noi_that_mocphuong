<%= form_with model: [:admin, @decoration], local: true, multipart: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-xl shadow-lg">

    <!-- TIÊU ĐỀ -->
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Thông tin trang trí nội thất</h2>

    <!-- Tên decoration -->
    <div>
      <%= f.label :name, "Tên decoration", class: "block font-medium mb-1" %>
      <%= f.text_field :name,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Mô tả -->
    <div>
      <%= f.label :content, "Mô tả", class: "block font-medium mb-1" %>
      <%= f.text_area :content, rows: 4,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <div>
      <%= f.label :images, "Ảnh", class: "block font-medium mb-1" %>
      <%= f.file_field :images, 
            multiple: true,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white" %>
    </div>


    <!-- Nút Lưu -->
    <div class="pt-4">
      <%= f.submit "Lưu trang trí",
            class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>


<% @decoration.images.order(created_at: :desc).each do |image| %>
  <div class="relative inline-block p-4 m-2">
    <%= image_tag image, class: "w-32 h-32 object-cover rounded border" %>
    <%= button_to "Xóa ảnh",
          purge_image_admin_decoration_path(@decoration, image_id: image.id),
          method: :delete,
          data: { confirm: "Bạn có chắc muốn xóa ảnh này?" } %>

  </div>
<% end %>