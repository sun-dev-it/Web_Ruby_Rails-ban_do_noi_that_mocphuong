<%= render "form", decoration: @decoration %>

<ul class="mt-4 space-y-2">
  <% @decorations.each do |decoration| %>
    <li>
      <%= decoration.name %>
      <% if decoration.content %>
        <%= decoration.content %>
      <% else %>
        <p>Không có mô tả</p>
      <% end %>
      <% if decoration.image.attached? %>
        <%= image_tag decoration.image, class: "w-48 h-48 object-cover" %>
      <% else %>
        <p>Không có hình ảnh</p>
      <% end %>
      
      <%= link_to "Sửa", edit_admin_decoration_path(decoration) %> |
      <%= button_to "Xóa",
      admin_decoration_path(decoration),
      method: :delete %>

    </li>
  <% end %>
</ul>

