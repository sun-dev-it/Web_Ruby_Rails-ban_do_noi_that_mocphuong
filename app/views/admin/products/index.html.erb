<div class="flex justify-center">
  <div class="sm:w-[80%] w-[90%] mt-10 bg-white rounded-lg p-6 sm:p-10">
    <h1 class="text-2xl font-bold mb-6 text-center">Quản lí sản phẩm</h1>

      <%= render "form", product: @product %>

      <ul class="mt-4 space-y-2">
        <% @products.each do |product| %>
          <li>
            <%= product.name %> - <%= product.category&.name %>
        
            <%= link_to "Sửa", edit_admin_product_path(product) %> |
            <%= link_to "Xóa", admin_product_path(product),
                  data: { turbo_method: :delete } %>
          </li>
        <% end %>
      </ul>
    <%= link_to "← Quay lại", admin_dashboard_path, class:"text-blue-600 hover:text-blue-800"%>
  </div>
</div>