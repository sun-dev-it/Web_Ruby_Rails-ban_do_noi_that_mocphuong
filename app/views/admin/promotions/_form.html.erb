<%= form_with model: [:admin, @promotion], local: true, multipart: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-xl shadow-lg">

    <!-- TIÊU ĐỀ -->
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Thông tin khuyến mãi</h2>

    <!-- Tên khuyến mãi -->
    <div>
      <%= f.label :name, "Tên sản phẩm khuyến mãi", class: "block font-medium mb-1" %>
      <%= f.text_field :name,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Mô tả -->
    <div>
      <%= f.label :content, "Mô tả", class: "block font-medium mb-1" %>
      <%= f.text_area :content, rows: 4,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Ảnh khuyến mãi -->
    <div>
      <%= f.label :image, "Ảnh khuyến mãi", class: "block font-medium mb-1" %>
      <%= f.file_field :image,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white" %>
    </div>

    <!-- Link video YouTube -->
    <div>
      <%= f.label :video, "Link YouTube", class: "block font-medium mb-1" %>
      <%= f.text_field :video,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Nút Lưu -->
    <div class="pt-4">
      <%= f.submit "Lưu khuyến mãi",
            class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>

<!-- Hiển thị ảnh khuyến mãi nếu có -->
<% if @promotion.image.attached? %>
  <div class="mt-6 flex justify-center">
    <%= image_tag @promotion.image, class: "w-48 h-48 object-cover rounded border" %>
  </div>
<% end %>
