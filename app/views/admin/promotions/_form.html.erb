<%= form_with model: [:admin, @promotion], local: true, multipart: true do |f| %>
  <div>
    <div>
      <%= f.label :name, "Tên sản phẩm khuyến mãi" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :content, "Mô tả" %>
      <%= f.text_area :content, rows: 4 %>
    </div>

    <div>
      <%= f.label :image, "Ảnh dự án" %>
      <%= f.file_field :image %>
    </div>

    <div>
      <%= f.label :video, "link youtube" %>
      <%= f.text_field :video %>
    </div>

    <div>
      <%= f.submit "Lưu dự án" %>
    </div>

  </div>
<% end %>

Ảnh dự án
<% if @promotion.image.attached? %>
  <%= image_tag @promotion.image, class: "w-48 h-48 object-cover" %>
<% end %>
