<%= form_with model: [:admin, @color], local: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-xl shadow-lg max-w-md mx-auto">

    <!-- Nền chính -->
    <div>
      <%= f.label :background, "Màu nền chính", class: "block font-medium mb-1" %>
      <%= f.color_field :background, value: @color.background,
            class: "w-full h-10 rounded border border-gray-300 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Nền phụ -->
    <div>
      <%= f.label :background1, "Màu nền phụ", class: "block font-medium mb-1" %>
      <%= f.color_field :background1, value: @color.background1,
            class: "w-full h-10 rounded border border-gray-300 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Header -->
    <div>
      <%= f.label :header, "Màu header", class: "block font-medium mb-1" %>
      <%= f.color_field :header, value: @color.header,
            class: "w-full h-10 rounded border border-gray-300 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Footer -->
    <div>
      <%= f.label :footer, "Màu footer", class: "block font-medium mb-1" %>
      <%= f.color_field :footer, value: @color.footer,
            class: "w-full h-10 rounded border border-gray-300 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Nút Lưu -->
    <div class="pt-4">
      <%= f.submit "Cập nhật màu sắc",
            class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>
