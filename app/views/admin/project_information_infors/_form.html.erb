<%= form_with(model: [:admin, @project], local: true, html: { multipart: true }) do |f| %>
  <div class="space-y-6">

    <!-- Nội dung -->
    <div>
      <%= f.label :content, "Nội dung bìa", class: "block font-medium mb-1" %>
      <%= f.text_area :content, rows: 4, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Upload nhiều ảnh -->
    <div>
      <%= f.label :images, "Ảnh dự án (chọn nhiều ảnh nếu muốn)", class: "block font-medium mb-1" %>
      <%= f.file_field :images, multiple: true, class: "block w-full border border-gray-300 rounded px-3 py-2 cursor-pointer" %>
    </div>

    <% if @project.images.attached? %>
      <div class="grid grid-cols-3 gap-4 mt-4">
        <% @project.images.each do |img| %>
          <div class="relative">
            <%= image_tag url_for(img), class: "w-full h-32 object-cover rounded" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.submit class: "bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>
