<%= form_with model: [:admin, @contact], local: true, multipart: true do |f| %>
  <div class="space-y-6 bg-white p-6 rounded-xl shadow-lg">

    <!-- Facebook -->
    <div>
      <%= f.label :fb, "Link Facebook", class: "block font-medium mb-1" %>
      <%= f.text_field :fb,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Zalo -->
    <div>
      <%= f.label :zalo, "Số Zalo", class: "block font-medium mb-1" %>
      <%= f.text_field :zalo,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Điện thoại -->
    <div>
      <%= f.label :phone, "Số điện thoại", class: "block font-medium mb-1" %>
      <%= f.text_field :phone,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Gmail -->
    <div>
      <%= f.label :gmail, "Gmail", class: "block font-medium mb-1" %>
      <%= f.email_field :gmail,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Địa chỉ -->
    <div>
      <%= f.label :address, "Địa chỉ", class: "block font-medium mb-1" %>
      <%= f.text_field :address,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>

    <!-- Ảnh nền -->
    <div>
      <%= f.label :image, "Ảnh bìa", class: "block font-medium mb-1" %>
      <%= f.file_field :image,
            class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white" %>
    </div>

    <!-- Nút Lưu -->
    <div class="pt-4">
      <%= f.submit "Lưu thay đổi",
            class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>

  </div>
<% end %>

<!-- Hiển thị ảnh nền nếu có -->
<% if @contact.image.attached? %>
  <div class="mt-6 flex justify-center">
    <%= image_tag @contact.image, class: "w-64 h-64 object-cover rounded border" %>
  </div>
<% end %>
