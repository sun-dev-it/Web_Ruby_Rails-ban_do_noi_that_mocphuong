<div class="p-6 bg-gray-100 min-h-screen">
  <div class="max-w-6xl mx-auto bg-white rounded-xl shadow-lg p-6">
    <h1 class="text-2xl font-bold mb-6">Quản lý Yêu cầu Tư vấn</h1>

    <table class="w-full border border-gray-300 rounded-lg overflow-hidden text-center">
      <thead class="bg-gray-100 border-b border-gray-300">
        <tr>
          <th class="px-4 py-2 border-r border-gray-300">Tên</th>
          <th class="px-4 py-2 border-r border-gray-300">Số điện thoại</th>
          <th class="px-4 py-2 border-r border-gray-300">Ngày gửi</th>
          <th class="px-4 py-2">Thao tác</th>
        </tr>
      </thead>

      <tbody>
        <% @requests.each do |request| %>
          <tr class="border-b border-gray-200 hover:bg-gray-50">
            <td class="px-4 py-2 border-r border-gray-200"><%= request.name %></td>
            <td class="px-4 py-2 border-r border-gray-200"><%= request.phone %></td>
            <td class="px-4 py-2 border-r border-gray-200"><%= request.created_at.strftime("%d/%m/%Y %H:%M") %></td>
            <td class="flex justify-center space-x-2 px-4 py-2">
              <%= link_to "Xem chi tiết", admin_request_path(request), class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
              <%= link_to "Xóa", admin_request_path(request), method: :delete, data: { confirm: "Bạn có chắc muốn xóa?" }, class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
