<div class="p-6 bg-gray-100 min-h-screen">
  <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-6">
    <h1 class="text-2xl font-bold mb-4">Chi tiết Yêu cầu</h1>

    <div class="space-y-4">
      <p><strong>Tên:</strong> <%= @request.name %></p>
      <p><strong>Số điện thoại:</strong> <%= @request.phone %></p>
      <p><strong>Nội dung:</strong> <%= @request.content %></p>
      <p><strong>Ngày gửi:</strong> <%= @request.created_at.strftime("%d/%m/%Y %H:%M") %></p>
    </div>

    <div class="mt-6 flex justify-between">
      <%= link_to "Quay lại", admin_requests_path, class: "px-4 py-2 bg-gray-300 rounded hover:bg-gray-400" %>
      <%= link_to "Xóa", admin_request_path(@request), method: :delete, data: { confirm: "Bạn có chắc muốn xóa?" }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" %>
    </div>
  </div>
</div>
