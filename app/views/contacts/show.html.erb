<div class="relative h-[80vh] bg-cover bg-center w-full"
     style="background-image: url('<%= url_for(@contact.image) %>')">

  <div class="absolute inset-0 bg-black/40"></div>

  <div class="relative z-10 h-full flex items-center justify-center text-center px-6">
    <div>
      <p class="text-xs tracking-[0.4em] text-gray-200 mb-4">
        CONTACT
      </p>
      <h1 class="text-4xl md:text-5xl font-semibold text-white">
        Liên hệ
      </h1>
    </div>
  </div>
</div>

<div class="flex justify-center -mt-40">
  <div class="w-[90%] sm:w-[70%] z-[800]">
    <div class="sm:flex rounded-lg shadow-sm shadow-gray-700 justify-between bg-white p-6 sm:p-12">

      <div class="sm:flex-1 text-center">
        <p class="text-2xl sm:text-3xl my-10 font-bold text-gray-700">Liên hệ với chúng tôi</p>
        <p class="flex justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
        </p>
        <p class="text-lg mb-6">
          <strong class="font-semibold text-gray-700">Địa chỉ:</strong>
          <span class="text-gray-600"><%= @contact.address %></span>
        </p>
        <p class="flex justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
          </svg>
        </p>
        <p class="text-lg mb-6">
          <strong class="font-semibold text-gray-700">Số điện thoại:</strong>
          <span class="text-gray-600"><%= @contact.phone %></span>
        </p>
        <p class="flex justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
          </svg>
        <p class="flex justify-center">
        <p class="text-lg mb-6">
          <strong class="font-semibold text-gray-700">Zalo:</strong>
          <%= link_to @contact.zalo, "https://zalo.me/#{@contact.zalo}",
                class: "text-blue-600 hover:underline",
                target: "_blank",
                rel: "noopener" %>
        </p>
        <p class="flex justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
          </svg>
        </p>          

        <p class="text-lg">
          <strong class="font-semibold text-gray-700">Facebook:</strong>
          <%= link_to @contact.fb, @contact.fb, 
                class: "text-blue-600 hover:underline", 
                target: "_blank", 
                rel: "noopener" %>
        </p>
      </div>

      <div class="sm:flex-1 text-center">
        <%= render "form/advise_contact" %>
      </div>
    </div>
  </div>  
</div>

<div class="flex justify-center mb-10">
  <div class="w-[90%] sm:w-[70%] z-[800]">

    <div class="mt-24 py-20">
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl font-semibold text-gray-900 mb-12">
          Cam kết của chúng tôi
        </h2>
                    
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold">Thiết kế cá nhân hóa</h3>
            <p class="text-gray-500 text-sm mt-2">
              Không rập khuôn – phù hợp từng không gian
            </p>
          </div>
                    
          <div>
            <h3 class="text-lg font-semibold">Sản xuất trực tiếp</h3>
            <p class="text-gray-500 text-sm mt-2">
              Kiểm soát chất lượng & tiến độ
            </p>
          </div>
                    
          <div>
            <h3 class="text-lg font-semibold">Bảo hành rõ ràng</h3>
            <p class="text-gray-500 text-sm mt-2">
              Đồng hành lâu dài cùng khách hàng
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
