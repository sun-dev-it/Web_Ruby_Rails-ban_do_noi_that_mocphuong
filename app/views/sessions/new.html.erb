<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-10 rounded-2xl shadow-xl w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-gray-700 mb-8">Đăng nhập</h1>

    <%= form_with url: login_path, local: true do |f| %>
      <div class="mb-6">
        <%= label_tag :email, "Email", class: "block text-gray-600 mb-2" %>
        <%= email_field_tag :email, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= label_tag :password, "Mật khẩu", class: "block text-gray-600 mb-2" %>
        <%= password_field_tag :password, nil, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= submit_tag "Đăng nhập", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 rounded-lg transition duration-300 ease-in-out" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Tạo tài khoản", new_user_path, class: "text-blue-500 hover:text-blue-700 font-medium transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
  </div>
</div>
