<div class="flex items-center justify-center min-h-screen bg-gray-50 px-4">
  <div class="w-full max-w-sm bg-white rounded-2xl shadow-lg p-8 text-center">

    <!-- Logo / Branding -->
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">
        Chào mừng đến với Nội Thất Mộc Phương!
      </h1>
      <p class="text-gray-500 mt-2 text-sm">
        Đăng nhập để tiếp tục
      </p>
    </div>

    <!-- Google Login Button -->
    <%= link_to "/auth/google_oauth2", data: { turbo: false },
        class: "flex items-center justify-center w-full border border-gray-300 rounded-lg
                py-3 px-4 text-gray-700 font-medium hover:bg-gray-100 transition mb-3" do %>
      <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
        <path fill="#EA4335" d="M12 12.24v3.6h5.28c-.23 1.3-1.4 3.82-5.28 3.82-3.18 0-5.77-2.6-5.77-5.8s2.59-5.8 5.77-5.8c1.8 0 3.01.77 3.7 1.44l2.53-2.48C18.2 4.06 15.88 2.8 12 2.8 6.48 2.8 2 7.28 2 12.8s4.48 10 10 10c5.76 0 9.6-4.06 9.6-9.76 0-.66-.08-1.16-.18-1.64H12z"/>
      </svg>
      Đăng nhập với Google
    <% end %>

    <!-- Facebook Login Button -->
    <%= link_to "/auth/facebook", data: { turbo: false },
        class: "flex items-center justify-center w-full bg-blue-600 text-white rounded-lg
                py-3 px-4 font-medium hover:bg-blue-700 transition" do %>
      <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24" fill="currentColor">
        <path d="M22.675 0h-21.35C.597 0 0 .597 0 1.326v21.348C0 23.403.597 24 1.326 24H12.82v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.894-4.788 4.66-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.796.715-1.796 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116C23.403 24 24 23.403 24 22.674V1.326C24 .597 23.403 0 22.675 0z"/>
      </svg>
      Đăng nhập với Facebook
    <% end %>

  </div>
</div>
