<div class="flex justify-center px-4 md:px-0">
  <div class="w-[90%] md:w-[80%] bg-white backdrop-blur-sm py-6 md:py-10 px-6 md:px-12 shadow-xl z-40">

    <div class="font-light md:text-lg leading-relaxed italic text-center md:text-justify">
      <%= raw simple_format(@introduction&.content || "Chúng tôi đang cập nhật thông tin giới thiệu...") %>
    </div>

    <% if @introduction&.youtube_embed_url.present? %>
      <div class="mt-6 md:mt-10 flex justify-center w-full max-w-full h-[300px] sm:h-[500px]">
        <iframe
          src="<%= @introduction.youtube_embed_url %>"
          title="YouTube video"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          class="w-full <%= @introduction.youtube_aspect_class %> rounded-xl shadow-lg">
        </iframe>
      </div>

    <% end %>
  </div>
</div>