<div class="flex justify-center px-4 md:px-0">
  <div style="<%= bg_rgba(Color.first&.background1, 0.8) %>;" 
       class="w-[90%] md:w-[80%] backdrop-blur-sm py-6 md:py-10 px-6 md:px-12 shadow-xl -mt-[20%] sm:-mt-[25%] z-40">

    <div class="flex justify-center">
      <div class="w-full h-[3px] rounded-full" 
           style="background-color: <%= Color.first&.header || '#ffffff' %>;">
      </div>
    </div>

    <div class="font-light md:text-lg leading-relaxed italic text-center md:text-justify">
      <%= raw simple_format(@introduction&.content || "Chúng tôi đang cập nhật thông tin giới thiệu...") %>
    </div>

    <% if @introduction&.link_video.present? %>
      <div class="mt-6 md:mt-10 flex justify-center">
        <iframe 
          src="<%= @introduction.link_video %>" 
          title="YouTube video" 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
          allowfullscreen
          class="w-full max-w-3xl aspect-video rounded-xl shadow-lg">
        </iframe>
      </div>
    <% end %>
  </div>
</div>