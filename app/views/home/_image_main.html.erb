<div id="image-wrapper" class="relative overflow-hidden opacity-0 transition-opacity duration-700 z-35">
  <% if @introduction.image.attached? %>
    <%= image_tag @introduction.image, class: "w-full aspect-[3/1] object-cover" %>
  <% end %>

  <!-- Doors -->
  <div class="absolute inset-0 left-door bg-black/90 origin-left"></div>
  <div class="absolute inset-0 right-door bg-black/90 origin-right"></div>
</div>


<div class="relative min-h-screen overflow-hidden">

  <!-- Background animated -->
  <div
    class="absolute inset-0 bg-cover bg-center animate-bg-move-about_us"
    style="background-image: url('<%= url_for(@introduction.image) if @introduction.image.attached? %>');">
  </div>