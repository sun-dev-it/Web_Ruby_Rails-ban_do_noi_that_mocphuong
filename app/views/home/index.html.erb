<h1>Danh sách User</h1>

<% @users.each do |user| %>
  <p>
    <strong>Tên:</strong> <%= user.name %><br>
    <strong>Email:</strong> <%= user.email %><br>
    <strong>Role:</strong> <%= user.role %>
  </p>
  <%= button_to "Xóa", user_path(user), method: :delete %>
  <br>
<% end %>

<h2>Giới thiệu</h2>
<p><%= @introduction.content if @introduction %></p>

<h2>Slogan</h2>
<p><%= @slogan.content if @slogan %></p>