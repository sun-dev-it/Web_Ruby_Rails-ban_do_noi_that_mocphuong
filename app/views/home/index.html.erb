  <!-- Background animated -->
  <div
    class="absolute inset-0 bg-cover bg-center animate-bg-pan"
    style="background-image: url('<%= url_for(@projectInformationInfor.image) if @projectInformationInfor.image.attached? %>');">
  </div>

  <!-- Overlay tối -->
  <div class="absolute inset-0 bg-black/40"></div>

