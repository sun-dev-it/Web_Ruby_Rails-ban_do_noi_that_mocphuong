<div class="flex justify-center items-center min-h-screen">
  <div class="w-[90%] sm:w-[50%] bg-white rounded-xl sm:rounded-2xl shadow-lg p-6 sm:p-10 text-center">
    
    <div class="text-2xl sm:text-3xl font-bold text-gray-700 mb-8">Yêu cầu tư vấn</div>

    <%= form_with model: @request, local: true do |f| %>
      <div class="space-y-6">

        <!-- Tên -->
        <div class="flex flex-col items-start">
          <%= f.label :name, "Tên của bạn", class: "mb-2 font-medium text-gray-600" %>
          <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Số điện thoại -->
        <div class="flex flex-col items-start">
          <%= f.label :phone, "Số điện thoại", class: "mb-2 font-medium text-gray-600" %>
          <%= f.text_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Nội dung yêu cầu -->
        <div class="flex flex-col items-start">
          <%= f.label :content, "Nội dung yêu cầu", class: "mb-2 font-medium text-gray-600" %>
          <%= f.text_area :content, rows: 5, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <!-- Nút gửi -->
        <div>
          <%= f.submit "Gửi yêu cầu", class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg transition duration-300" %>
        </div>

      </div>
    <% end %>
  </div>
</div>
