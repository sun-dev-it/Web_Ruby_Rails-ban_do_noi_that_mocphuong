<div class="relative w-[90%] sm:w-[70%] md:w-[50%] lg:w-full mx-auto">
  <%= form_with url: products_path, method: :get, local: true do |f| %>
    <div class="flex items-center overflow-hidden shadow-sm focus-within:ring-0 focus-within:ring-0 rounded-l-lg">
      <%= f.text_field :q, placeholder: "Tìm kiếm sản phẩm...", class: "flex-1 py-1 pl-4 outline-none bg-gray-100 text-gray-900" %>
      <button type="submit" class="pb-1 px-2 rounded-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197M16.803 16.803A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 11.607 11.607Z" />
        </svg>
      </button>
    </div>
  <% end %>
</div>